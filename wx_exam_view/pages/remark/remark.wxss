.passimg{
    position: absolute;
    z-index: 20;
    width: 100px;
    height:100px;
    top: 50%;
    opacity: 0;
    left: 60%;
    animation: ksbd-1 1s;
    -webkit-animation:ksbd-1 1s forwards;

    animation-delay: 1s;
    -moz-animation-delay: 1s;
    -webkit-animation-delay: 1s;
    -o-animation-delay: 1s;

    animation-fill-mode: forwards;
    -moz-animation-fill-mode: forwards;
    -webkit-animation-fill-mode: forwards;
    -o-animation-fill-mode: forwards;
}

@keyframes ksbd-1 {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
@-webkit-keyframes ksbd-1 {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
